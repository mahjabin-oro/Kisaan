<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cropprediction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getCropPrediction"
    android:background="@drawable/croppredback"
    >

    <Button
        android:id="@+id/backto"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCback"
        android:layout_width="315dp"
        android:layout_height="258dp"
        android:layout_marginTop="32dp"
        android:background="#228F63"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <ImageView
        android:id="@+id/imageViewC"
        android:layout_width="305dp"
        android:layout_height="248dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />
    <EditText
        android:id="@+id/nitogen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the amount of Nitrogen"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/phosphorus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the amount of P"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nitogen" />

    <EditText
        android:id="@+id/pottasium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the value of K"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phosphorus" />

    <EditText
        android:id="@+id/temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter Temperature"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pottasium" />

    <EditText
        android:id="@+id/humidity"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter Humidity"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp" />
    <EditText
        android:id="@+id/ph"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter ph level"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidity" />
    <EditText
        android:id="@+id/rainn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter Rainfall"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ph" />


    <Button
        android:id="@+id/enterBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#228F63"
        android:text="Predict"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rainn" />

    <ProgressBar
        android:id="@+id/progressBarinput"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="#228F63"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterBtn"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/texttviewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="40dp"
        android:textSize="20dp"
        android:backgroundTint="#F3FFFA"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewC" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Predict Crop"
        android:textColor="#228F63"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text=" "
        android:textAlignment="center"
        android:textColor="#228F63"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>