<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cropprediction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formunit1"
    tools:context=".getFertilizerPrediction">

    <Button
        android:id="@+id/backtohomee"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Predict Fertilizer"
        android:textColor="#228F63"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text=" "
        android:textColor="#228F63"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/fertimage2"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_marginTop="152dp"
        android:background="#228F63"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/fertimage"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginTop="160dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:textColor="#228F63"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fertimage"
        app:layout_constraintVertical_bias="0.677"
        app:layout_goneMarginTop="15dp" />
    <EditText
        android:id="@+id/ferttemp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the temperature"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text21"
        app:layout_constraintVertical_bias="0.072" />

    <EditText
        android:id="@+id/ferthumid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the amount of humidity"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ferttemp" />

    <EditText
        android:id="@+id/fertmois"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the value of moisturization"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ferthumid" />

    <Spinner
        android:id="@+id/soilfret"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter Soil Type"
        android:textColorHint="#228F63"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fertmois" />

    <Spinner
        android:id="@+id/fertcrop"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter Crop Type"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soilfret" />

    <EditText
        android:id="@+id/fertnitro"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the amount of nitrogen "
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fertcrop" />

    <EditText
        android:id="@+id/potafert"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the amount of potatium"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fertnitro" />

    <EditText
        android:id="@+id/phosfert"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#F3FFFA"
        android:ems="10"
        android:hint="Enter the amount of phosphorus"
        android:padding="10dp"
        android:textColor="#228F63"
        android:textColorHint="#228F63"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potafert" />


    <Button
        android:id="@+id/sbmtBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/cornercurvy"
        android:backgroundTint="#228F63"
        android:text="Predict"
        android:textColor="#F3FFFA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phosfert" />

    <ProgressBar
        android:id="@+id/progressBarinput2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:outlineSpotShadowColor="#228F63"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbmtBtn"
        app:layout_constraintVertical_bias="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>